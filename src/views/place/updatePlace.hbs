<h1>Update Place</h1>

<form action="/places/update/{{place.id}}" method="post">
  <div class="form-group">
    <label for="name">Name*</label>
    <input value="{{place.name}}" class="form-control" type="text" id="name" name="name" placeholder="Nom du concert" required>
  </div>

  <div class="form-group">
    <label for="description">Description</label>
    <input value="{{place.description}}" class="form-control" type="text" id="description" name="description" placeholder="Type de lieu">
  </div>

  <div class="form-group">
    <label for="image">Image</label>
    <input value="{{place.image}}" class="form-control" type="text" id="image" name="image" placeholder="Ex: http://lien.vers-l-image.com/img.jpeg">
  </div>

  <div class="form-group">
    <label for="date">Date</label>
    <input value="{{place.date}}" class="form-control" type="date" id="date" name="date">
  </div>
