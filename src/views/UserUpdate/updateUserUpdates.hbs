<h1>Update UserUpdates</h1>

<form action="/UserUpdatess/update/{{UserUpdates.id}}" method="post">
  <div class="form-group">
    <label for="username">Username*</label>
    <input value="{{UserUpdates.username}}" class="form-control" type="text" id="username" name="username" placeholder="Nom" required>
  </div>

  <div class="form-group">
    <label for="idPlace">Show*</label>
    <select class="form-control" id="idPlace" name="idPlace" required>
      {{#list places}}
      <option value="{{id}}" {{selected ../UserUpdates.idPlace id}}>{{name}}</option>
      {{/list}}
    </select>
  </div>

  <div class="form-group">
    <label for="duration">Duration*</label>
    <input value="{{UserUpdates.duration}}" class="form-control" type="number" id="duration" name="duration" placeholder="Nombre de places" required>
  </div>

   <div class="form-group">
    <label for="creation">Creation*</label>
    <input value="{{UserUpdates.creation}}" class="form-control" type="number" id="creation" name="creation" placeholder="Nombre de places" required>
  </div>

  <div class="text-center">
    <button type="submit" class="btn btn-primary">
      Update
    </button>
  </div>
</form>